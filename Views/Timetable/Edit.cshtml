@model TimetableSystem.Models.EditEntryViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Timetable Entry</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            min-height: 100vh;
        }

        .glass-morphism {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .floating {
            animation: float 3s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }

        }

        .input-glow:focus {
            box-shadow: 0 0 20px rgba(102, 126, 234, 0.5);
        }
    </style>
</head>
<body class="p-4 md:p-8">
    <div class="max-w-4xl mx-auto">
        <div class="glass-morphism rounded-3xl shadow-2xl p-8 md:p-12 floating">
            <!-- Header -->
            <div class="flex items-center gap-4 mb-8 pb-6 border-b-4 border-gradient-to-r from-purple-500 to-pink-500">
                <span class="text-5xl">✏️</span>
                <h2 class="text-4xl font-bold bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 bg-clip-text text-transparent">
                    Edit Spell Schedule
                </h2>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-lg mb-6 shadow-md">
                    <div class="flex items-center gap-3">
                        <span class="text-2xl">⚠️</span>
                        <div>
                            <strong class="font-bold">Correction Needed:</strong>
                            @Html.ValidationSummary(false)
                        </div>
                    </div>
                </div>
            }

            @using (Html.BeginForm("Edit", "Timetable", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.EntryId)

                <div class="space-y-6">
                    <!-- Student -->
                    <div class="transform hover:scale-105 transition-all duration-300">
                        <label class="flex items-center gap-2 text-lg font-bold text-purple-800 mb-2">
                            <span class="text-2xl">👤</span> Apprentice *
                        </label>
                        @Html.DropDownListFor(m => m.StudentId,
                        new SelectList(Model.Students, "StudentId", "StudentName", Model.StudentId),
                                        "-- Select Apprentice --",
                                        new { @class = "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:outline-none focus:border-purple-500 input-glow transition-all duration-300" })
                    @Html.ValidationMessageFor(m => m.StudentId, "", new { @class = "text-red-500 text-sm mt-1 block" })
                </div>

                <!-- Subject -->
                <div class="transform hover:scale-105 transition-all duration-300">
                    <label class="flex items-center gap-2 text-lg font-bold text-purple-800 mb-2">
                        <span class="text-2xl">📚</span> Subject of Magic *
                    </label>
                    @Html.TextBoxFor(m => m.Subject, new { @class = "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:outline-none focus:border-purple-500 input-glow transition-all duration-300", placeholder = "e.g., Potion Brewing" })
                    @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-red-500 text-sm mt-1 block" })
                </div>

                <!-- Date -->
                <div class="transform hover:scale-105 transition-all duration-300">
                    <label class="flex items-center gap-2 text-lg font-bold text-purple-800 mb-2">
                        <span class="text-2xl">📅</span> Mystical Date *
                    </label>
                    @Html.TextBoxFor(m => m.ScheduleDate, "{0:yyyy-MM-dd}", new { type = "date", @class = "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:outline-none focus:border-purple-500 input-glow transition-all duration-300" })
                    @Html.ValidationMessageFor(m => m.ScheduleDate, "", new { @class = "text-red-500 text-sm mt-1 block" })
                </div>

                <!-- Time Range -->
                <div class="grid md:grid-cols-2 gap-6">
                    <div class="transform hover:scale-105 transition-all duration-300">
                        <label class="flex items-center gap-2 text-lg font-bold text-purple-800 mb-2">
                            <span class="text-2xl">🌅</span> Start Time *
                        </label>
                        @Html.TextBoxFor(m => m.StartTime, new { type = "time", @class = "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:outline-none focus:border-purple-500 input-glow transition-all duration-300", id = "startTime" })
                        @Html.ValidationMessageFor(m => m.StartTime, "", new { @class = "text-red-500 text-sm mt-1 block" })
                    </div>

                    <div class="transform hover:scale-105 transition-all duration-300">
                        <label class="flex items-center gap-2 text-lg font-bold text-purple-800 mb-2">
                            <span class="text-2xl">🌙</span> End Time *
                        </label>
                        @Html.TextBoxFor(m => m.EndTime, new { type = "time", @class = "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:outline-none focus:border-purple-500 input-glow transition-all duration-300", id = "endTime" })
                        @Html.ValidationMessageFor(m => m.EndTime, "", new { @class = "text-red-500 text-sm mt-1 block" })
                        <span class="text-red-500 text-sm mt-1 hidden" id="timeValidationError">⚠️ End time must be after start time</span>
                    </div>
                </div>

                <!-- Status -->
                <div class="transform hover:scale-105 transition-all duration-300">
                    <label class="flex items-center gap-2 text-lg font-bold text-purple-800 mb-2">
                        <span class="text-2xl">🔮</span> Status Crystal *
                    </label>
                    @Html.DropDownListFor(m => m.StatusId,
                                        new SelectList(Model.Statuses, "StatusId", "StatusName", Model.StatusId),
                                        "-- Select Status --",
                                        new { @class = "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:outline-none focus:border-purple-500 input-glow transition-all duration-300" })
                    @Html.ValidationMessageFor(m => m.StatusId, "", new { @class = "text-red-500 text-sm mt-1 block" })

                    <div class="flex flex-wrap gap-3 mt-4">
                        @foreach (var status in Model.Statuses)
                            {
                                <div class="@status.ColorCode px-4 py-2 rounded-full text-white font-semibold text-sm shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300">
                                    @status.StatusName
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="transform hover:scale-105 transition-all duration-300">
                        <label class="flex items-center gap-2 text-lg font-bold text-purple-800 mb-2">
                            <span class="text-2xl">🏰</span> Chamber Location
                        </label>
                        @Html.TextBoxFor(m => m.Location, new { @class = "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:outline-none focus:border-purple-500 input-glow transition-all duration-300", placeholder = "e.g., Tower 101" })
                    </div>

                    <!-- Notes -->
                    <div class="transform hover:scale-105 transition-all duration-300">
                        <label class="flex items-center gap-2 text-lg font-bold text-purple-800 mb-2">
                            <span class="text-2xl">📜</span> Ancient Scrolls (Notes)
                        </label>
                        @Html.TextAreaFor(m => m.Notes, new { @class = "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:outline-none focus:border-purple-500 input-glow transition-all duration-300 min-h-[100px]", placeholder = "Additional mystical notes..." })
                    </div>

                    <!-- Buttons -->
                    <div class="flex flex-wrap gap-4 mt-8">
                        <button type="submit" id="saveBtn" class="bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white font-bold py-4 px-8 rounded-full shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300 flex items-center gap-2">
                            <span class="text-xl">💾</span> Save Spell
                        </button>
                        <a href="/Timetable/Index" class="bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 text-white font-bold py-4 px-8 rounded-full shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300 flex items-center gap-2">
                            <span class="text-xl">⬅️</span> Return
                        </a>
                        <button type="button" onclick="deleteEntry(@Model.EntryId)" class="bg-gradient-to-r from-red-500 to-pink-600 hover:from-red-600 hover:to-pink-700 text-white font-bold py-4 px-8 rounded-full shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300 flex items-center gap-2">
                            <span class="text-xl">🗑️</span> Banish
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        function validateTimes() {
            var startTime = document.getElementById('startTime').value;
            var endTime = document.getElementById('endTime').value;
            var errorSpan = document.getElementById('timeValidationError');
            var saveBtn = document.getElementById('saveBtn');

            if (startTime && endTime) {
                var startParts = startTime.split(':');
                var endParts = endTime.split(':');
                var startMinutes = parseInt(startParts[0]) * 60 + parseInt(startParts[1]);
                var endMinutes = parseInt(endParts[0]) * 60 + parseInt(endParts[1]);

                if (endMinutes <= startMinutes) {
                    errorSpan.classList.remove('hidden');
                    document.getElementById('endTime').classList.add('border-red-500');
                    saveBtn.disabled = true;
                    saveBtn.classList.add('opacity-50', 'cursor-not-allowed');
                    return false;
                } else {
                    errorSpan.classList.add('hidden');
                    document.getElementById('endTime').classList.remove('border-red-500');
                    saveBtn.disabled = false;
                    saveBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                    return true;
                }
            }
            return true;
        }

        document.getElementById('startTime').addEventListener('change', validateTimes);
        document.getElementById('endTime').addEventListener('change', validateTimes);
        window.addEventListener('load', validateTimes);

        function deleteEntry(entryId) {
            if (confirm('⚠️ Are you sure you want to banish this entry? This spell cannot be undone!')) {
                var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                var formData = new FormData();
                formData.append('id', entryId);

                fetch('@Url.Action("Delete", "Timetable")', {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': token },
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('✨ Entry banished successfully!');
                        window.location.href = '@Url.Action("Index", "Timetable")';
                    } else {
                        alert('⚠️ Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('⚠️ An error occurred while banishing the entry.');
                });
            }
        }
    </script>
</body>
</html>