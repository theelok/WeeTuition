@model TimetableSystem.Models.LoginViewModel
@{
    Layout = null;   /* Remove default layout to allow full-page Tailwind UI */
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Timetable System</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

            body::before {
                content: '';
                position: absolute;
                width: 200%;
                height: 200%;
                top: -50%;
                left: -50%;
                background: radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
                animation: rotate 20s linear infinite;
            }

        @@keyframes rotate {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }

        .glass-morphism {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .floating {
            animation: float 3s ease-in-out infinite;
        }
        @@keyframes float {
            0%,100%

        {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-20px);
        }

        }

        .input-glow:focus {
            box-shadow: 0 0 30px rgba(102,126,234,0.6);
        }

        .pulse-glow {
            animation: pulse-glow 2s ease-in-out infinite;
        }
        @@keyframes pulse-glow {
            0%,100%

        {
            box-shadow: 0 0 20px rgba(102,126,234,0.5);
        }

        50% {
            box-shadow: 0 0 40px rgba(102,126,234,0.8), 0 0 60px rgba(102,126,234,0.6);
        }

        }
    </style>
</head>

<body class="flex items-center justify-center p-4">

    <!-- CENTERED LOGIN CARD -->
    <div class="glass-morphism rounded-3xl shadow-2xl p-8 md:p-12 w-full max-w-md floating pulse-glow relative z-10">

        <div class="text-center mb-8">
            <div class="inline-block sparkle text-7xl mb-4">📅</div>
            <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 bg-clip-text text-transparent mb-2">
                Mystical Portal
            </h1>
            <p class="text-purple-700 font-medium">Enter the realm of time management</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-lg mb-6 shadow-md">
                @Html.ValidationSummary(false)
            </div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="space-y-6">

                <div>
                    <label class="font-bold text-purple-800">🧙 Wizard Name</label>
                    @Html.TextBoxFor(m => m.Username, new {
                    @class = "w-full px-4 py-3 border-2 border-purple-300 rounded-xl input-glow",
                                placeholder = "Enter your mystical name"
                                })
            </div>

            <div>
                <label class="font-bold text-purple-800">🔐 Secret Spell</label>
                @Html.PasswordFor(m => m.Password, new {
                                @class = "w-full px-4 py-3 border-2 border-purple-300 rounded-xl input-glow",
                                placeholder = "Enter your secret incantation"
                                })
            </div>

            <button type="submit"
                    class="w-full bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 text-white font-bold py-4 px-6 rounded-full text-lg shadow-xl">
                ✨ Enter the Portal ✨
            </button>

        </div>
                }

        <!-- DEMO ACCOUNTS BELOW -->
        <div class="mt-8 pt-6 border-t-2 border-purple-200">
            <!-- your demo cards remain unchanged -->
        </div>

    </div>

</body>
</html>
